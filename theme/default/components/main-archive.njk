{% extends "./main.njk" %}

{% block left %}
<div id="archive-list">
    {% for archive in archives %}
    <div class="archive-item">
        <div class="archive-item-header">
            <h2 class="archive-title"><a href="/archive/{{ archive.name }}">{{ archive.name }}</a></h2>
        </div>
        <div class="archive-item-body">
            <p class="archive-desc">
            {{ archive.desc }}
            </p>
        </div>
    </div>
    {% endfor %}
</div>
<p class="pagination">
    {% if ext.curPage == 1 %}
        <span></span>
    {% else %}
        <a href="/archive/?page={{ext.curPage - 1}}">&lt;上一页</a>
    {% endif %}
        <span>{{ext.curPage}}/{{ext.pageCount}}</span>
    {% if ext.curPage == ext.pageCount %}
        <span></span>
    {% else %}
        <a href="/archive/?page={{ext.curPage + 1}}">&lt;下一页</a>
    {% endif %}
</p>
{% endblock %}

{% block right %}
{% include "./aside.njk" %}
{% endblock %}